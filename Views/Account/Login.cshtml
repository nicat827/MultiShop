@model LoginVM

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Login</span></h5>
            <form class="bg-light p-30 mb-5" method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="UserNameOrEmail">UserName or Email</label>
                        <input asp-for="UserNameOrEmail" class="form-control"  placeholder="UserName or Email">
                        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="col-md-6 form-group d-flex  align-items-center">
                        <input style="width:20px;height:20px" asp-for="IsPersistence" class="form-control">
                        <label style="text-align:center;margin:0px;margin-left:5px;" asp-for="IsPersistence">Remember Me</label>
                    </div>
                    <button class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>